<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#4c000000" >

    <LinearLayout
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="45dip"
        android:layout_marginRight="45dip"
        android:minWidth="150dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/upload_picture_dialog_btn_up_selector"
            android:gravity="center_vertical"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/picture_head"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.66dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text="@string/str_picture_head"
                android:textColor="@color/gray"
                android:visibility="gone"
                android:textSize="@dimen/insert_picture_dialog_tv_size" />

            <LinearLayout
                android:id="@+id/take_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/upload_picture_dialog_btn_up_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.66dp"
                    android:background="@drawable/uploadpicture_dialog_btn_up_icon" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.66dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:text="@string/str_take_picture"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/insert_picture_dialog_tv_size" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#ececec" />

        <LinearLayout
             android:id="@+id/local_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/upload_picture_dialog_btn_down_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.66dp"
                android:background="@drawable/uploadpicture_dialog_btn_down_icon" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.66dp"
                android:gravity="center_vertical"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text="@string/str_local_picture"
                android:textColor="@color/gray"
                android:textSize="@dimen/insert_picture_dialog_tv_size" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout><!-- From: file:/F:/studio/06/ITLanBaoBaseLib/res/layout/insert_picture_dialog_layout.xml -->