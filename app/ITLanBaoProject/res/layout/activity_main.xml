<com.itlanbao.app.libs.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    android:background="@drawable/background"
    >

    <include layout="@layout/view_left_bottom" />

    <com.itlanbao.app.libs.MyRelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eeeeee"
        android:orientation="vertical"> 

        <fragment
            android:id="@+id/tab_bar_fragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            class="com.itlanbao.app.tabhost.TabFragment" />
    </com.itlanbao.app.libs.MyRelativeLayout>

</com.itlanbao.app.libs.DragLayout>

